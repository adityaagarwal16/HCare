<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:elevation="4dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:paddingBottom="4dp"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>

                <ImageView
                    android:layout_margin="16dp"
                    android:id="@+id/cart"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/vector_cart"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/todo"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:tint="@color/colorSecondary" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_below="@id/toolbar"
            android:layout_centerInParent="true"
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:orientation="vertical"
                android:paddingBottom="75dp">

                <RelativeLayout
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:padding="13dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mainImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:foreground="?selectableItemBackground"
                        android:padding="2dp"
                        android:textAlignment="center"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/main3" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/requestText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/colorPrimary"
                    android:text="Consultation booked\nDoctor will be here soon"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:visibility="gone"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/textView44"
                        android:letterSpacing="0.02"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="7dp"
                        android:textColor="?android:textColorPrimary"
                        android:text="Top Issues"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/line"
                        android:text="Top Issues"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorSecondary"
                        app:layout_constraintEnd_toEndOf="@+id/textView54"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView54" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/topIssuesRecycler"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlSymmetry">
                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

                <RelativeLayout
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:onClick="consultations"
                    android:layout_marginTop="5dp"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/vector_report"
                        android:layout_width="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_height="120dp"
                        app:tint="@color/colorSecondary"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/heading"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:text="@string/consultations"
                        android:letterSpacing="0.02"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/line4"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="2dp"
                        android:layout_below="@id/heading"
                        android:layout_width="wrap_content"
                        android:maxWidth="300dp"
                        android:layout_height="2dp"
                        android:background="@color/colorSecondary"
                        android:layout_alignParentEnd="true"
                        android:text="@string/consultations" />

                    <TextView
                        android:id="@+id/subHeading"
                        android:layout_below="@id/line4"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:layout_marginStart="2dp"
                        android:text="View your consultations"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <ImageView
                        android:src="@drawable/vector_back"
                        android:layout_width="20dp"
                        android:rotation="180"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:tint="@color/colorSecondary"
                        android:contentDescription="@string/todo" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:letterSpacing="0.02"
                        android:id="@+id/allCategoriesHeader"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="7dp"
                        android:textColor="?android:textColorPrimary"
                        android:text="All categories"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/line1"
                        android:text="All categories"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorSecondary"
                        app:layout_constraintEnd_toEndOf="@+id/textView54"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView54" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/allIssuesRecycler"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlSymmetry">
                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

                <RelativeLayout
                    android:padding="13dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ViewFlipper
                        android:id="@+id/imageView9"
                        android:layout_width="match_parent"
                        android:layout_height="145dp" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        app:itemIconPadding="15dp"
        app:headerLayout="@layout/main_navigation_bar_header"
        app:menu="@menu/main_menu"
        style="@style/navigationDrawer"
        android:layout_gravity="start"
        android:layout_height="match_parent" />

</androidx.drawerlayout.widget.DrawerLayout>