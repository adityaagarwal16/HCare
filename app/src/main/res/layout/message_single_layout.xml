<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_single_layout_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">


    <ImageView
        android:id="@+id/textimage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:paddingBottom="0dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/textimage1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginRight="100dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:paddingBottom="0dp"
        android:scaleType="centerCrop" />

    <io.gloxey.cfv.CFTextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:autoLink="all"
        android:background="@drawable/text_color_background"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textCursorDrawable="@color/blackcolor"
        android:textIsSelectable="true"
        android:textSize="16sp"
        app:font_name="@string/opensansRegular" />

    <io.gloxey.cfv.CFTextView
        android:id="@+id/message_text_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="100dp"
        android:autoLink="all"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorLink="@color/textColorDark"
        android:textCursorDrawable="@color/blackcolor"
        android:textIsSelectable="true"
        android:textSize="16sp"
        app:font_name="@string/opensansRegular" />

    <io.gloxey.cfv.CFTextView
        android:id="@+id/pdfview"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/text_color_background"
        android:padding="2dp"
        android:text="@string/pdf_file"
        app:font_name="@string/opensansRegular"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:visibility="invisible" />

    <io.gloxey.cfv.CFTextView
        android:id="@+id/callreqView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/message_text_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toolgradiant"
        android:paddingEnd="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingStart="2dp"
        android:text="Doctor will call you as soon as possible"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:font_name="@string/opensansRegular"
        android:visibility="invisible" />


    <io.gloxey.cfv.CFTextView
        android:id="@+id/timeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_text_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="2dp"
        android:text="time"
        android:textAlignment="center"
        android:textSize="12sp"
        app:fontFamily="@font/quicksand"
        app:font_name="@string/opensansRegular" />

    <io.gloxey.cfv.CFTextView
        android:id="@+id/treattext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:text='Here"s your treatment ,please press the button to get it. '
        android:textAlignment="center"
        android:textColor="@color/blackcolor"
        android:textSize="14dp"
        android:visibility="invisible" />

    <io.gloxey.cfv.CFButton
        android:id="@+id/treatment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/callreqView"
        android:layout_alignEnd="@+id/treattext"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/text_color_background"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/treatment"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:visibility="invisible" />

</RelativeLayout>