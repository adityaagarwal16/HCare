<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_single_layout_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:padding="10dp"
        android:visibility="gone"
        android:text="@string/time"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/userMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_chat_user"
            android:layout_marginStart="100dp"
            android:paddingTop="7dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimaryInverse"
            android:text="hello there, what's up? sdoijj apokda soidj aosidj asoijdias"
            tools:ignore="HardcodedText,RelativeOverlap" />

        <TextView
            android:id="@+id/doctorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="100dp"
            android:paddingTop="7dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:background="@drawable/background_chat_doctor"
            android:text="hello there, what's up? sdiuf hfuishdf sdijios"
            tools:ignore="HardcodedText,RelativeOverlap" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/treatmentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginEnd="100dp"
        android:foreground="?selectableItemBackground"
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="25dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/treatment"
            android:text="@string/treatment"
            android:paddingTop="7dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>