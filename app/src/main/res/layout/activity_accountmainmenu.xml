<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hcare.homeopathy.hcare.Mainmenus.AccountmainmenuActivity">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/main_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_page_toolbar"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="10dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/basicinfo"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:background="@color/colorbg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/settingsimage"
                        android:layout_width="150dp"
                        android:layout_height="165dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="2dp"
                        android:src="@drawable/default_profile" />

                    <io.gloxey.cfv.CFTextView
                        android:id="@+id/editImageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/settings_image"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="11dp"
                        android:text="Edit >"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        app:font_name="@string/opensansBold" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorbg"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />

                    <io.gloxey.cfv.CFTextView
                        android:id="@+id/basicinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="Basic Info"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:font_name="@string/opensansSemiBold" />

                    <io.gloxey.cfv.CFTextView
                        android:id="@+id/profileeditbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/basicinfo"
                        android:layout_alignEnd="@+id/view"
                        android:layout_alignBottom="@+id/basicinfo"
                        android:paddingEnd="10dp"
                        android:text="Edit >"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        app:font_name="@string/opensansBold" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/basicinfo"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"
                        android:background="@color/colorbg"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/view"
                        android:background="@color/colorAccent">

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="Name"
                            android:textAlignment="textStart"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="18sp"
                            app:font_name="@string/opensansRegular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView26"
                            app:layout_constraintTop_toTopOf="parent" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/emailview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/name"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="8dp"
                            android:text="Email"
                            android:textAlignment="textStart"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="18sp"
                            app:font_name="@string/opensansRegular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView29"
                            app:layout_constraintTop_toBottomOf="@+id/sex" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sex"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="8dp"
                            android:text="Age"
                            android:textAlignment="textStart"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="18sp"
                            app:font_name="@string/opensansRegular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView27"
                            app:layout_constraintTop_toBottomOf="@+id/name" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/sex"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/emailview"
                            android:layout_alignEnd="@+id/age"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="8dp"
                            android:text="sex"
                            android:textAlignment="textStart"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="18sp"
                            app:font_name="@string/opensansRegular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView28"
                            app:layout_constraintTop_toBottomOf="@+id/age" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/phone_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="8dp"
                            android:text="phone number"
                            android:textAlignment="textStart"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="18sp"
                            app:font_name="@string/opensansRegular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView30"
                            app:layout_constraintTop_toBottomOf="@+id/emailview" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:text="Name :"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:font_name="@string/opensansSemiBold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Age :"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:font_name="@string/opensansSemiBold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView26" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Sex :"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:font_name="@string/opensansSemiBold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView27" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Email :"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:font_name="@string/opensansSemiBold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView28" />

                        <io.gloxey.cfv.CFTextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Ph No :"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:font_name="@string/opensansSemiBold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView29" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_below="@+id/textView30"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorbg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/phone_number" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</RelativeLayout>
