<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hcare.homeopathy.hcare.OrderTreatment.OrderNowActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_above="@id/placeOrder"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <include

                layout="@layout/include_hcare_wallet"/>

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <TextView
                    android:id="@+id/subtotalHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorPrimary"
                    android:text="Subtotal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/subTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:letterSpacing="0.03"
                    android:text="Subtotal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/rupee1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/subTotal"
                    android:text="₹"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/deliveryCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/deliveryChargeHeader"
                    android:layout_alignParentEnd="true"
                    android:letterSpacing="0.03"
                    android:text="Delivery"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/rupee4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/deliveryChargeHeader"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@id/deliveryCharge"
                    android:text="₹"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/deliveryChargeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subTotal"
                    android:layout_marginTop="5dp"
                    android:text="Delivery Charge"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/HCareDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/HCareDiscountHeader"
                    android:layout_alignParentEnd="true"
                    android:letterSpacing="0.03"
                    android:text="360"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/rupee6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/HCareDiscountHeader"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@id/HCareDiscount"
                    android:text="₹"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/HCareDiscountHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deliveryChargeHeader"
                    android:layout_marginTop="5dp"
                    android:text="HCare Discount"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/WalletDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/WalletDiscountHeader"
                    android:layout_alignParentEnd="true"
                    android:letterSpacing="0.03"
                    android:text="0"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/rupee7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/WalletDiscountHeader"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@id/WalletDiscount"
                    android:text="₹"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/WalletDiscountHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/HCareDiscountHeader"
                    android:layout_marginTop="5dp"
                    android:text="HCare Wallet"
                    tools:ignore="HardcodedText" />




                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/totalHeader"
                    android:layout_alignParentEnd="true"
                    android:letterSpacing="0.03"
                    android:text="Total"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/totalHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/WalletDiscountHeader"
                    android:layout_marginTop="20dp"
                    android:text="Order Total"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/rupee3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/totalHeader"
                    android:layout_marginEnd="4dp"
                    android:layout_toStartOf="@id/total"
                    android:text="₹"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/line"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_below="@id/total"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <TextView
                    android:id="@+id/savings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="10dp"
                    android:text="savings"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <!--<TextView
                    android:id="@+id/walletOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="-13dp"
                    android:layout_toLeftOf="@id/total"
                    android:text="Add money from wallet"
                    android:textColor="@color/colorSecondary"
                    android:textSize="10sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/walletMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/walletOption"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="-10dp"
                    android:layout_toLeftOf="@id/total"
                    android:text="HCare money in wallet: "
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="8sp" />

                <CheckBox
                    android:id="@+id/walletCheckBox"
                    android:layout_width="30dp"
                    android:layout_height="21dp"
                    android:layout_alignBottom="@id/walletMoney"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@id/walletMoney"
                    android:text=""
                    android:visibility="visible" />-->

            </RelativeLayout>

            <ImageView
                android:background="@color/colorSecondary"
                android:layout_marginTop="5dp"
                android:src="@drawable/banner_delivery"
                android:layout_width="match_parent"
                android:layout_height="175dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:padding="25dp">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/nameHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/name"
                        android:textColor="#BABABA"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nameLine"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_below="@id/nameHeader"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorSecondary"
                        android:text="@string/name" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nameLine"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@id/nameCross"
                        android:background="@android:color/transparent"
                        android:hint="Enter your name"
                        android:inputType="textCapSentences"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/nameCross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/name"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="5dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/vector_close" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/phoneNumberHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/mobileNumber"
                        android:textColor="#BABABA"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/phoneNumberLine"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_below="@id/phoneNumberHeader"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorSecondary"
                        android:text="@string/mobileNumber" />

                    <TextView
                        android:id="@+id/pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phoneNumberLine"
                        android:layout_marginEnd="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="7dp"
                        android:text="@string/prefix"
                        android:textColor="#BABABA"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/phoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/pre"
                        android:layout_below="@id/phoneNumberLine"
                        android:layout_marginEnd="10dp"
                        android:letterSpacing="0.03"
                        android:layout_toStartOf="@id/phoneNumberCross"
                        android:background="@android:color/transparent"
                        android:hint="Enter your phone Number"
                        android:inputType="phone"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/phoneNumberCross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/phoneNumber"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="5dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/vector_close" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/pinCodeHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/pinCode"
                        android:textColor="#BABABA"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pinCodeLine"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_below="@id/pinCodeHeader"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorSecondary"
                        android:text="@string/pinCode" />

                    <EditText
                        android:id="@+id/pinCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pinCodeLine"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@id/pinCodeCross"
                        android:background="@android:color/transparent"
                        android:hint="Enter your PIN code"
                        android:inputType="number"
                        android:paddingTop="10dp"
                        android:letterSpacing="0.02"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/pinCodeCross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/pinCode"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="5dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/vector_close" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/addressHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/address"
                        android:textColor="#BABABA"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/addressLine"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_below="@id/addressHeader"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorSecondary"
                        android:text="@string/address" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addressLine"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@id/addressCross"
                        android:hint="House No. / Building / area"
                        android:paddingBottom="5dp"
                        android:background="@android:color/transparent"
                        android:paddingTop="10dp"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText"
                        android:inputType="textMultiLine|textCapSentences" />

                    <ImageView
                        android:id="@+id/addressCross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/address"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="5dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/vector_close" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/cityHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/city"
                        android:textColor="#BABABA"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/cityLine"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_below="@id/cityHeader"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorSecondary"
                        android:text="@string/city" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cityLine"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@id/cityCross"
                        android:background="@android:color/transparent"
                        android:hint="Enter your city"
                        android:inputType="textCapSentences"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/cityCross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/city"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="5dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/vector_close" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/stateHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/state"
                        android:textColor="#BABABA"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/stateLine"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_below="@id/stateHeader"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorSecondary"
                        android:text="@string/state" />

                    <RelativeLayout
                        android:id="@+id/selectState"
                        android:layout_width="match_parent"
                        android:layout_below="@id/stateLine"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="10dp"
                            android:layout_toStartOf="@id/stateCross"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="?android:textColorPrimary"
                            android:hint="Select your state"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/stateCross"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp" android:background="?selectableItemBackgroundBorderless"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/vector_down_arrow" />

                    </RelativeLayout>



                </RelativeLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/placeOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorSecondary"
        android:elevation="4dp"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:onClick="placeOrder"
        android:padding="16dp"
        android:text="Place your order"
        android:textColor="?android:textColorPrimaryInverse"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>
