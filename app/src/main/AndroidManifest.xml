<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hcare.homeopathy.hcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION"/>
    <uses-permission android:name="android.permission.INSTALL_SHORTCUT"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".Start.SplashScreenApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:exported="false"
        android:protectionLevel="signature"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">


        <activity
            android:name=".Start.SplashScreenActivity"
            android:theme="@style/splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".Start.LoginActivity"
            android:theme="@style/splashScreen"/>


        <activity android:name=".MainActivity"
            android:label="HCare"
            android:theme="@style/splashScreen"/>


        <activity
            android:name=".Disease.DiseaseActivity"
            android:theme="@style/splashScreen"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".Disease.DiseaseSpinnerActivity"
            android:parentActivityName=".MainActivity" />


        <activity
            android:name=".Consultations.Doctor.MainDoctorActivity"
            android:label="Consultation"
            android:theme="@style/splashScreen" />


        <activity android:name=".Consultations.ConsultationsActivity"
            android:label="Consultations"
            android:parentActivityName=".MainActivity" >
            <intent-filter>
                <action android:name="com.hcare.homeopathy.hcare_TARGET_NOTIFICATION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity android:name=".Checkout.CheckoutActivity"
            android:label="Checkout">
        </activity>


        <activity android:name=".NavigationItems.Faq.FaqActivity"
            android:theme="@style/splashScreen"
            android:label="FAQ"
            android:parentActivityName=".MainActivity" />


        <activity
            android:name=".NavigationItems.CustomerCareActivity"
            android:label="Customer care"
            android:parentActivityName=".MainActivity">
        </activity>


        <activity
            android:name=".NavigationItems.Orders.OrdersActivity"
            android:label="Orders"/>


        <activity
            android:name=".NavigationItems.ProfileActivity"
            android:label="Profile"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:parentActivityName=".MainActivity" />


        <activity android:name=".OrderTreatment.CartActivity"
            android:label="My Cart"/>


        <activity android:name=".OrderTreatment.OrderNowActivity"
            android:label="Order now"
            android:windowSoftInputMode="stateHidden|adjustPan"/>


        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />


        <activity
            android:name=".NavigationItems.BlogsActivity"
            android:parentActivityName=".MainActivity" />




        <service
            android:name=".JvFiles.FirebaseMessagingService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>



        <meta-data
            android:exported="false"
            android:name="com.razorpay.ApiKey"
            android:value="rzp_live_SzHvbklFoHMBtv" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value" />

        <meta-data
            android:name="com.facebook.sdk.CodelessDebugLogEnabled"
            android:value="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>

</manifest>